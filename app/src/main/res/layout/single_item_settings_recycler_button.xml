<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginVertical="2dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/settings_item_text"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_settings_button"
        android:fontFamily="@font/aveniraedium"
        android:gravity="center"
        tools:text="@string/settings_screen_save_preset"
        android:textColor="@color/settings_screen_buttons_text_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>